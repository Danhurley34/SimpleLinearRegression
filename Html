<!DOCTYPE html>
<html>
<head>
    <title>Simple Habit Suggestion App</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            background-color: #f5f5f5;
        }
        .container {
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            background-color: white;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        label, input {
            display: block;
            margin-bottom: 10px;
        }
        button {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }
        p {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Simple Habit Suggestion App</h1>
        <label for="habits">Enter your habits (separated by commas):</label>
        <input type="text" id="habits">
        <button id="suggestButton">Get Suggestion</button>
        <p id="suggestion"></p>
    </div>
    
    <script>
        const habitsInput = document.getElementById('habits');
        const suggestButton = document.getElementById('suggestButton');
        const suggestion = document.getElementById('suggestion');

        suggestButton.addEventListener('click', function() {
            const habits = habitsInput.value.split(',').map(habit => habit.trim());

            if (habits.length > 0) {
                const randomHabit = habits[Math.floor(Math.random() * habits.length)];
                suggestion.textContent = `Try a new habit: ${randomHabit}`;
            } else {
                suggestion.textContent = "Please enter at least one habit.";
            }
        });
    </script>
</body>
</html>

